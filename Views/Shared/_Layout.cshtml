            <div id="btPst" >
            <input id="btnPost" type="submit" class="btn btn-primary btn-md" value="Post Article" />
            </div><br />


            <div id="choopi" hidden>

                 
                <form method="post" action="/Home/postArticle">
                   <div class="row">
                    <div class="col-md-9">

                    <label for="ArticleHeading" class="sr-only">ArticleHeading</label>

                    <input type="text" class="form-control" name="ArticleHeading" placeholder="Enter Article Heading" required autofocus />
                   </div>
                        <div class="col-md-3">

                            <label for="ArticleCategory" class="sr-only">ArticleCategory</label>


                            <select id="Category" class="form-control" name="ArticleCategory">
                                <option value="objc">Objective-c</option>
                                <option value="cpp">C++</option>
                                <option value="java">Java</option>
                                 <option value="csharp">C#</option>
                                 <option value="assembly">Assembly</option>
                                <option value="geometry">Geometry</option>
                                <option value="algebra">Algebra</option>
                               <option value="trigonometry">Trigonometry</option>

                            </select>
                            <div hidden> 
                          <input type="text" class="form-control" name="ArticlePoster" value="@Session["id"]"  /> 
                                </div>
                    </div></div>
                    
                    <br>
                    <fieldset>
                        <textarea id="noise" name="ArticleText" class="widgEditor nothing"></textarea>
                        <script type="text/javascript">CKEDITOR.replace('noise');</script>

                    </fieldset>

                    <br />

                    <fieldset class="submit">
                        <br />
                        <input id="Post1" type="submit" class="btn btn-primary btn-md" value="Post Article" />

                        @*              <div id="divCancel" hidden>*@
                        <input type="button" id="btnCancel" class="btn btn-primary btn-md" value="Discard" />
                        @*            </div>*@
                    </fieldset>
                </form>

                  
            </div>
        </div>
    </div>
                     
                  
                     }
                     else
                     {
                    <script>

                        $('#pdiv').remove();
                      
                    </script>
