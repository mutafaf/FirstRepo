@model EducationCommunity.Models.Account
@{
    ViewBag.Title = "Register";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />


    @Scripts.Render("~/bundles/jquery")


<script>
    function func() {
        var fnm = $('#emailBox').val();
         // validation of username
        $.getJSON("/UserAccount/validateEmail?un=" + fnm, function (data) {
            if (data) {
           //    alert("Username available");
               $('#pSuccess').show();
            }
            else {
//                alert("username not available");

                 $('#pFail').show();
            }
        }
)
    }
</script>
    
<h2>Register</h2>



<div class="container">
<div class="main">
    
  
    <div class="col-md-6">
        <div class="form-horizontal">
    @using (Html.BeginForm("registerUser", "UserAccount", FormMethod.Post))
    {
        @Html.ValidationSummary(false);
       
            
        <div class="form-group col-md-8">
            
          <label for="inputEmail" class="sr-only" >Email address</label>
 
    
      <input type="email" id="emailBox" name="AccEmail" class="form-control" placeholder="Enter Email Address" required />
       </div>
            <div class="col-md-4">
             <input type="button" class="btn btn-primary btn-block" id="chkBtn" value="Check Availability" onclick="func()">
                </div>
       <br /><br />
        <p id="pSuccess" hidden style="color:green"  > UserName available</p>
        <p  style="color:red" id="pFail" hidden >Username not available</p>
        
        
        <div class="form-group col-md-8">
        <input type="text" name="AccName" class="form-control" placeholder="Enter Username "   />
        </div><br/><br />
    
         <div class="form-group col-md-8">
        <input class="form-control" type="password" name="AccPassword" placeholder="Enter Password" required />
        </div><br/>
           <br />
       
         <div class="form-group col-md-8">
              <input class="form-control" type="tel" name="AccPhone" placeholder="Enter Phone Number"  />
    </div><br /><br />
    
        <br />
        <div class="form-group col-md-8">
        <button class="btn btn-primary btn-block" type="submit">Sign up</button>
     </div>
        
    }
        </div>
    
     </div>
    </div>
    
</div>